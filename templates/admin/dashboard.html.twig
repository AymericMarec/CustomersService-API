{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Tableau de bord{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Bienvenue dans l'administration du restaurant</h5>
                    <p class="card-text">
                        Utilisez le menu de gauche pour naviguer dans les différentes sections de l'administration.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Gestion des plats</h5>
                    <p class="card-text">
                        Accédez à la gestion des plats pour ajouter, modifier ou supprimer des plats du menu.
                    </p>
                    <a href="{{ path('admin', {crudAction: 'index', crudControllerFqcn: 'App\\Controller\\Admin\\FoodCrudController'}) }}" class="btn btn-primary">
                        <i class="fas fa-utensils"></i> Gérer les plats
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 